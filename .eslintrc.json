{
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "document": false,
    "window": false,
    "localStorage": false,
    "File": false,
    "Blob": false,
    "FileReader": false,
    "navigator": false,
    "webkitURL": false,
    "jest": false,
    "describe": false,
    "it": false,
    "expect": false,
    "test": false,
    "FormData": false,
    "Option": false
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["react", "prettier", "react-hooks"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "impliedStrict": true,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": 0,
    "react/jsx-uses-vars": 1,
    "react/display-name": 1,
    "no-unused-vars": "warn",
    "no-console": 0,
    "no-unexpected-multiline": "warn",
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies,
    "no-empty": 0
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "17.0.2"
    }
  }
}
